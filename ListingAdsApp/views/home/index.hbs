<div class="container">
    <div class="row">
        {{#each ads}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="image" class="img-responsive">
                    <div class="caption">
                        <h3>{{this.title}}</h3>
                        <p class="description">{{this.content}}</p>
                        <div class="clearfix">
                            <div class="price pull-left">{{this.price}}</div>
                            <a href="/ad/details/{{this.id}}" class="btn btn-sm btn-default pull-right" role="button">Read more</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>