<div class="container">
    <h3> Are you sure that you want to delete category <strong>{{category.name}}</strong> and all corresponding ads in
        it ?</h3>
    <form class="form-horizontal" method="POST" action="/admin/category-delete/{{category.id}}">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <br>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Town</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each ads}}
            <tr>
                <td><a href="/ad/details/{{id}}">{{title}}</a></td>
                <td><a href="/admin/user-edit/{{this.author.id}}">{{this.author.fullName}}</a></td>
                <td><a href="/admin/town-edit/{{town.id}}">{{town.name}}</a></td>
                <td>
                    <a href="/ad/edit/{{id}}">
                        <button type="submit" class="btn btn-primary btn-xs">Edit</button>
                    </a>
                    <a href="/ad/delete/{{id}}">
                        <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>


