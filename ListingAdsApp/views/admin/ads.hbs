<div class="container">
    <table class="table table-hover table-bordered table-responsive">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Comments</th>
            <th>Category</th>
            <th>Town</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each ads}}
            <tr>
                <td><a href="/ad/details/{{this.id}}">{{this.title}}</a></td>
                <td><a href="/admin/user-edit/{{this.author.id}}">{{this.author.fullName}}</a></td>
                <td><span class="badge">{{this.comments.length}}</span></td>
                <td><a href="/admin/category-edit/{{this.category.id}}">{{this.category.name}}</a></td>
                <td><a href="/admin/town-edit/{{this.town.id}}">{{this.town.name}}</a></td>
                <td>
                    <a href="/ad/edit/{{this.id}}">
                        <button type="submit" class="btn btn-primary btn-xs">Edit</button>
                    </a>
                    <a href="/ad/delete/{{this.id}}">
                        <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
