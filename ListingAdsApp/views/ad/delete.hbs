<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/ad/delete/{{id}}">
            <fieldset>
                <legend>Delete Ad</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adTitle">Ad Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="adTitle" placeholder="Ad Title" value="{{title}}" name="title" disabled >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adPrice">Price</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="adPrice" placeholder="Ad Price" value="{{price}}" name="title" disabled >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adPhone">Ad Phone</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="adTitle" placeholder="Ad Phone" value="{{phone}}" name="phone" disabled >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" disabled>{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <a href="/" class="btn btn-default">Cancel</a>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
