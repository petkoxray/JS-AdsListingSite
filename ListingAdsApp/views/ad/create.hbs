<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" enctype="multipart/form-data" method="POST" action="/ad/create">
            <fieldset>
                <legend>New Ad</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adTitle">Ad Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="adTitle" placeholder="Ad Title" name="title" required >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adPhone">Phone number</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="adPhone" placeholder="Phone number" name="phone" required >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" required></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="adImage">Image</label>
                    <div class="col-sm-6">
                        <input class="form-control" id="image" name="image" type="file" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>