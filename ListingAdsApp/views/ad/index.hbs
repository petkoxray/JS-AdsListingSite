<div class="container">
    <form class="navbar-form navbar-left" role="search" method="post" action="/ad/">
        <div class="form-group">
            <input type="text" required="required" name="search" class="form-control" placeholder="Search">
        </div>
        <label class="radio-inline"><input type="radio" value="town" name="option">Town</label>
        <label class="radio-inline"><input type="radio" value="category" name="option">Category</label>
        <button type="submit" class="btn btn-default">Search</button>
    </form>
</div>
<br>
<div class="container">
    <div class="row">
        {{#each ads}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="image" width="80px" class="img-responsive">
                    <div class="caption">
                        <h3>{{this.title}}</h3>
                        <p><strong>Category:</strong> <a href="/category/{{this.category.id}}">{{this.category.name}}</a></p>
                        <p><strong>Town:</strong> <a href="/town/{{this.town.id}}"> {{this.town.name}}</a></p>
                        <p><strong>Price:</strong> {{this.price}} лева</p>
                        <p><strong>Author:</strong> <a href="/user/ads/{{this.author.id}}"> {{this.author.fullName}}</a></p>
                        <div class="clearfix">
                            <div class="price pull-left">{{this.content}}</div>
                            <a href="/ad/details/{{this.id}}" class="btn btn-sm btn-default pull-right" role="button">Read more</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>